generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  name            String   @db.VarChar(20)
  email           String   @unique @db.VarChar(255)
  imgUrl String? @db.VarChar(200) @map("img_url")

  records Record[]
  reports   Report[]
}

model Categories {
  id Int @id
  categoryName String @unique @db.VarChar(10) @map("category_name")

  recordCategories RecordCategories[]
  reportCategories ReportCategories[]
}

model Record {
  id Int @id @default(autoincrement())
  userId Int @map("user_id")
  title String
  content String
  occurDate  DateTime @map("occur_date")
  updatedAt DateTime @map("updated_at") @default(now())

  user User @relation(fields: [userId], references: [id])
  @@index([userId], map: "user_id")

  recordCategories RecordCategories[]
}

model Report {
  id Int @id @default(autoincrement())
  userId    Int     @map("user_id")
  standard String @db.VarChar(200)
  content String
  year Int 

  user User @relation(fields: [userId], references: [id])
  repordCategories ReportCategories[]

  @@index([userId])
}

model RecordCategories {
  id Int @id @default(autoincrement())
  recordId Int @map("record_id")
  categoryId Int @map("category_id")
  
  record Record @relation(fields: [recordId], references: [id])
  categories Categories @relation(fields: [categoryId], references: [id])
  @@index([recordId], map: "record_id")
  @@index([categoryId], map: "catecory_id")
}

model ReportCategories {
  id Int @id @default(autoincrement())
  reportId Int @map("report_id")
  categoryId Int @map("category_id")
  
  categories Categories @relation(fields: [categoryId], references: [id])
  report Report @relation(fields: [reportId], references: [id])
  @@index([categoryId], map: "category_id")
  @@index([reportId], map: "report_id")
}

