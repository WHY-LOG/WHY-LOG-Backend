generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique @db.VarChar(255)
  name            String   @db.VarChar(20)
  userReferenceId String   @unique @default(uuid())
  refreshToken   String? @db.VarChar(500)

  records Record[]
}

model Categories {
  id Int @id
  category_name String @unique @db.VarChar(10)

  record_categories Record_categories[]
  report_categories Report_categories[]
}

model Record {
  id Int @id @default(autoincrement())
  userId Int @map("user_id")
  title String
  content String
  occur_date Int @db.TinyInt
  updated_at DateTime

  user User @relation(fields: [userId], references: [id])
  @@index([userId], map: "user_id")

  record_categories Record_categories[]
}

model Report {
  id Int @id @default(autoincrement())
  
  standard String @db.VarChar(200)
  content String @db.VarChar(200)

  report_categories Report_categories[]
}

model Record_categories {
  id Int @id @default(autoincrement())
  recordId Int @map("record_id")
  categoryId Int @map("category_id")
  
  record Record @relation(fields: [recordId], references: [id])
  categories Categories @relation(fields: [categoryId], references: [id])
  @@index([recordId], map: "record_id")
  @@index([categoryId], map: "catecory_id")
}

model Report_categories {
  id Int @id @default(autoincrement())
  reportId Int @map("report_id")
  categoryId Int @map("category_id")
  
  categories Categories @relation(fields: [categoryId], references: [id])
  report Report @relation(fields: [reportId], references: [id])
  @@index([categoryId], map: "category_id")
  @@index([reportId], map: "report_id")
}

